{
	// See http://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"windows": {
		"command": "C:\\Windows\\Microsoft.NET\\Framework\\v4.0.30319\\MSBuild.exe"
	},
	"linux": {
		"command": "xbuild"
	},
	"args": [
		// Ask msbuild to generate full paths for file names
		"/property:GenerateFullPaths=true"
	],
	// Don't pass task name as an argument
	"suppressTaskName": true,
	"showOutput": "always",
	"tasks": [
		{
			"taskName": "Build",
			"isBuildCommand": true,
			"args": ["/t:Build", "/p:Configuration=Debug"],
			// Use the standard MS compiler pattern to detect errors, warnings and infos
			"problemMatcher": "$msCompile"
		},
		{
			"taskName": "Compile (Debug)",
			"args": ["/t:Build", "/p:Configuration=Debug", "/p:EnableAfterBuild=false"],
			// Use the standard MS compiler pattern to detect errors, warnings and infos
			"problemMatcher": "$msCompile"
		},
		{
			"taskName": "Compile (Release)",
			"args": ["/t:Build", "/p:Configuration=Release", "/p:EnableAfterBuild=false"],
			// Use the standard MS compiler pattern to detect errors, warnings and infos
			"problemMatcher": "$msCompile"
		},
		{
			"taskName": "Make Install Package (Release)",
			"args": ["/t:Build", "/p:Configuration=Release"],
			// Use the standard MS compiler pattern to detect errors, warnings and infos
			"problemMatcher": "$msCompile"
		},
		{
			"taskName": "Make Install Package (Debug)",
			"args": ["/t:Build", "/p:Configuration=Debug", "/p:EnableInstallPackage=true", "/p:EnableLocalDeploy=false"],
			// Use the standard MS compiler pattern to detect errors, warnings and infos
			"problemMatcher": "$msCompile"
		},
		{
			"taskName": "Re-deploy Assets",
			"args": ["Packaging/LocalDeploy.targets"]
		}
	]
}
